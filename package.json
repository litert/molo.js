{
  "name": "@litert/molo",
  "version": "0.2.0",
  "description": "The DI and IoC implementation for LiteRT.",
  "main": "lib/index.js",
  "scripts": {
    "prepare": "npm run rebuild",
    "build": "echo Using TypeScript && tsc -v && tsc -p .",
    "build-watch": "echo Using TypeScript && tsc -v && tsc -w -p .",
    "rebuild": "npm run clean && npm run lint && npm run build",
    "test": "echo See https://github.com/litert/molo-examples",
    "clean": "rm -rf lib",
    "lint": "eslint --ext ts src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/litert/molo.js.git"
  },
  "bugs": {
    "url": "https://github.com/litert/molo.js/issues"
  },
  "homepage": "https://github.com/litert/molo.js#readme",
  "keywords": [
    "litert",
    "module",
    "ioc",
    "di",
    "loader"
  ],
  "author": "Angus.Fenying <fenying@litert.org> (https://fenying.net)",
  "license": "Apache-2.0",
  "typings": "lib/index.d.ts",
  "types": "lib/index.d.ts",
  "dependencies": {
    "@litert/core": "^1.0.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run lint"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/node": "^13.9.0",
    "@typescript-eslint/eslint-plugin": "^2.21.0",
    "@typescript-eslint/parser": "^2.21.0",
    "eslint": "^6.8.0",
    "husky": "^4.2.3",
    "typescript": "^3.2.2"
  }
}
